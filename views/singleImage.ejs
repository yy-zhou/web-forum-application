<% include partials/header %>


<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= component.link %>">
                <div class="caption">
<!--                                        <h4 class="pull-right">$9.00/night</h4>-->
                    <h4><a><%= component.name %></a></h4>
                    <p><%= component.description %></p>
                </div>
            </div>
            <div class="card card-body bg-light">
                <div class="text-right">
                    <a class="btn btn-outline-info" href="/list/<%= component.id %>/comment/new">Add New Comment</a>
                </div>
                <hr>
                <% component.imageRelatedComment.forEach(function(c){ %>
                <div class="row">
                    <div class="col-md-12">
                        <strong><%= c.author %></strong>
                        <span class="float-right"> <%= c.createDate.toDateString() %></span>
                        <p>
                            <%= c.text %>
                        </p>
                        <br>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% include partials/footer %>