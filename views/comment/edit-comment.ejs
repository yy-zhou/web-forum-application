<% include ../partials/header %>

<div class="container">
    <h1 class="text-center">Edit comment</h1>

    <form action="/list/<%= postID %>/comment/<%= comment.id %>?_method=PUT" method="post"
          style="width: 30%; margin: 0 auto">
        <div class="form-group">
            <textarea class="form-control" type="text" name="editComment"><%= comment.text %></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-block">Submit!</button>
            <a href="/list" class="btn btn-info btn-block">Go Back</a>
        </div>
    </form>
</div>

<% include ../partials/footer %>