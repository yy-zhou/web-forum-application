<% include ../partials/header %>

<div class="container">
    <h1 class="text-center">Edit "<%= element.name %>"</h1>

    <form action="/list/<%= element._id %>?_method=PUT" method="post" style="width: 30%; margin: 0 auto">
        <div class="form-group">
            <input class="form-control" type="text" name="name" value="<%= element.name %>">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="image" value="<%= element.link %>">
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-block">Submit!</button>
            <a href="/list/<%= element._id %>" class="btn btn-danger btn-block">Go Back</a>
        </div>

    </form>
</div>

<% include ../partials/footer %>