<% include ../partials/header %>

<div class="container">
    <h1 class="text-center">Edit "<%= element.name %>"</h1>
    <h4 class="text-center">(Support Markdown)</h4>
    <br>
    <form action="/list/<%= element._id %>?_method=PUT" method="post" style="width: 100%; margin: 0 auto">
        <div class="form-group float-right" style="width: 10%">
            <a href="/list/<%= element._id %>" class="btn btn-outline-danger btn-block">Go Back</a>
        </div>
        <div class="form-group float-right" style="width: 1rem">
        </div>
        <div class="form-group float-right" style="width: 10%  ">
            <button class="btn btn-outline-primary btn-block">Submit!</button>
        </div>

        <div class="form-group">
            <input class="form-control" type="text" name="name" value="<%= element.name %>">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="image" value="<%= element.link %>">
        </div>
        <div class="form-group">
            <textarea class="form-control new-content" name="content"
                      id="edit-post-content" style="height: 100rem"><%= element.postContent %></textarea>
        </div>
    </form>
</div>

<% include ../partials/footer %>