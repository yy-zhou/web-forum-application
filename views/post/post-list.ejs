<% include ../partials/header %>

<div class="container">

    <header class="jumbotron">
        <div class="container">
            <h1>Image List</h1>
        </div>
    </header>
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Hello!</p>
            <div class="list-group">
                <li class="list-group-item"><a href="/list/new">Add a new post!</a></li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <% component.forEach(function (c) { %>
            <div class="col-md-9 col-sm-6">
                <figure class="figure">
                    <img src="<%= c.link %>" class="figure-img img-fluid img-thumbnail" alt="IMG">
                    <figcaption class="figure-caption text-center"><%= c.name %></figcaption>
                    <a href="/list/<%= c.id %>" class="btn btn-info">More Info</a>
                </figure>
            </div>
        <% }) %>
    </div>
</div>

<% include ../partials/footer %>